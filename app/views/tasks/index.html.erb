<div class="container">
<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" <%= "checked" if task.completed %> >
      <%= link_to task.title, task_path(task) %> 
      <%= link_to "Delete", task_path(task.id), 
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>


<%= link_to "+ Add a new task", new_task_path %>
</div>